# Backend Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-strong-database-password-here
DATABASE_NAME=ahmedurkmez_db

# Application Configuration
NODE_ENV=production
PORT=3001

# JWT Configuration - CRITICAL: MUST BE CHANGED
JWT_SECRET=your-super-strong-jwt-secret-key-minimum-256-bits-long
JWT_EXPIRES_IN=7d

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-production-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=noreply@yourdomain.com

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,mp4,avi,mov

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
HELMET_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-very-strong-admin-password

# External Services
YOUTUBE_API_KEY=your-youtube-api-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Redis Configuration (if using)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Logging Configuration
LOG_LEVEL=error
LOG_FORMAT=json
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m