# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-strong-database-password-here
DATABASE_NAME=ahmedurkmez_db

# Application Configuration
NODE_ENV=production
PORT=3001

# JWT Configuration - MUST BE CHANGED
JWT_SECRET=your-super-strong-jwt-secret-key-min-256-bits
JWT_EXPIRES_IN=7d

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-production-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=noreply@yourdomain.com

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,mp4,avi,mov

# External Services
YOUTUBE_API_KEY=your-youtube-api-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-very-strong-admin-password

# Redis Configuration
REDIS_PASSWORD=your-redis-password

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-if-using
GOOGLE_ANALYTICS_ID=your-ga-id-if-using

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1